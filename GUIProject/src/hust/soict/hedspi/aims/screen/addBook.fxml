<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox prefHeight="300.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="StoreScreen" />
                  <Menu mnemonicParsing="false" text="CartScreen" />
              </menus>
            </MenuBar>
            <Label prefHeight="21.0" prefWidth="501.0" text="Add Book" textAlignment="CENTER" textOverrun="CLIP" />
            <GridPane alignment="CENTER" cacheShape="false" prefHeight="124.0" prefWidth="312.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="245.0" minWidth="10.0" prefWidth="174.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="326.0" minWidth="10.0" prefWidth="326.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
               <children>
                  <Label text="Title" />
                  <Label text="Category" GridPane.rowIndex="1" />
                  <Label text="Author" GridPane.rowIndex="2" />
                  <TextField fx:id="tfBookTitle" GridPane.columnIndex="1" />
                  <TextField fx:id="tfBookCate" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Cost" GridPane.rowIndex="3" />
                  <TextField fx:id="tfBookAuthor" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="tfBookCost" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <Button fx:id="btnAddBook" mnemonicParsing="false" text="Add to store">
               <VBox.margin>
                  <Insets left="200.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </top>
</BorderPane>
